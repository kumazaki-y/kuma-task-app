.board
  %h1.board_title= @board.title
  .board_detail
    = image_tag 'default-avatar.png'
    %div
      %p= @board.author_name
      %p= @board.display_created_at
    - if user_signed_in? && current_user.has_written?(@board)
      .board_detail_actions
        .dropdown
          = image_tag 'actions.svg', class: 'dropbtn'
          .dropdown-content.mini
            = link_to '編集する', edit_board_path(@board)
            = link_to '削除する', board_path(@board), data: { method: 'delete', confirm: '本当に削除してもよろしいですか？' }
  .board_content
    = @board.content
  - if user_signed_in?
    - if current_user.has_liked?(@board)
      .board_heart
        = link_to board_like_path(@board), data: { method: 'delete' } do
          = image_tag 'heart-active.svg'
    - else
      .board_heart
        = link_to board_like_path(@board), data: { method: 'post' } do
          = image_tag 'heart.svg'
